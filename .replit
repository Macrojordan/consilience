modules = ["python-3.10", "nodejs-20", "web", "bash"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LLM Council"

[[workflows.workflow]]
name = "LLM Council"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'uv run python -m backend.main & cd frontend && npm run dev'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "scripts/start.sh"]
build = ["bash", "scripts/build.sh"]
